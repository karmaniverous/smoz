{
  "app": {
    "exclude": ["app/**"],
    "include": ["app/README.md"]
  },
  "ci": {
    "exclude": [".github/**"],
    "include": [".github/workflows/sync.yml"]
  },
  "diagrams": {
    "exclude": ["diagrams/**"],
    "include": ["diagrams/aws.pu"]
  },
  "docs": {
    "exclude": ["docs-src/**"],
    "include": ["README.md", "docs-src/overview.md"]
  },
  "scripts": {
    "exclude": ["scripts/**"],
    "include": ["scripts/templates-typecheck.ts"]
  },
  "src": {
    "exclude": ["src/**"],
    "include": ["src/index.ts"]
  },
  "templates": {
    "exclude": ["templates/**"],
    "include": [
      "templates/default/README.md",
      "templates/default/types/registers.d.ts"
    ]
  },
  "tests": {
    "exclude": [
      "src/**/*.test.ts",
      "templates/**/test/**",
      "examples/**/test/**"
    ],
    "include": ["src/test/http.ts"]
  },
  "vscode": {
    "exclude": [".vscode/**"],
    "include": [".vscode/extensions.json"]
  }
}
